<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/drop_white"/>
            <corners
                android:radius="5dp"/>
            <stroke android:color="@color/white_overlay2"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pure_white"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:right="1dp"

                android:top="1dp">
                <shape>
                    <stroke
                        android:color="@color/truered"
                        android:width="1dp"
/><solid android:color="@color/truered"/>
                    <corners
                        android:radius="5dp"/>
                </shape></item>
            <item android:bottom="2dp"
                android:left="2dp">
                <shape>
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>