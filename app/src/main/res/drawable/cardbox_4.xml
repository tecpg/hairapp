<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <item android:state_enabled="false">
        <shape>
            <stroke android:color="@color/black_overlay"
                android:width="1dp"/>
            <solid android:color="@color/white_overlay" />
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/deadDark"/>
            <corners
                android:radius="30dp"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:right="1dp"

                android:top="1dp">
                <shape>
                    <gradient android:centerColor="@color/pure_white"
                        android:startColor="@color/pure_white"
                        android:endColor="@color/colorAccent"
                        android:angle="90"/>

                    <corners android:radius="50dp"/>
                </shape></item>

        </layer-list>
    </item>
</selector>